<h1>Listing Doctor's Visits</h1>
<div data-role="navbar" data-bar-theme="c">
  <ul>
    <li><%= link_to 'New Doctor visit', :controller => "doctor_visits", :action=> "new" %></li>
  </ul>
</div>

<ul data-role="listview" data-divider-them="b" data-inset="true">
  <% @doctor_visits.each do |doctor_visit| %>
    <li><%= link_to doctor_visit.comment, doctor_visit %></li>
  <% end %>
</ul>